<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "book" class="btn-back"}}
      <span class="sr-only">Back</span>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{model.title}}</h3>

        <div class="actions">
          {{#if (can "edit book" model)}}
            {{#link-to "book.edit" model.id class="btn-pop"}}
              Edit
            {{/link-to}}
          {{/if}}

          {{#if (can "delete book" model)}}
            <button class="btn-recessed" onclick={{action "destroy"}}>Delete</button>
          {{/if}}
        </div>
      </div>

      <div class="details">
        <p>
          <strong>Author:</strong>
          {{#link-to "author.detail" model.author.id}}
            {{model.author.last}}, {{model.author.first}}
          {{/link-to}}
        </p>
        <p>
          <strong>Publish Date:</strong>
          {{moment-format model.author.publishDate "MMMM Do YYYY"}}
        </p>
        <p>
          <strong>ISBN:</strong>
          {{model.author.ibsn}}
        </p>
        <p>
          <strong>Added by:</strong>
          {{model.username}}
        </p>
      </div>
    </div>
    {{liquid-outlet}}
  </div>
</div>