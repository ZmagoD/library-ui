<div class="panel-heading">
  <div class="search">
    {{input type="text" placeholder="Search by title or IBSN" value=search}}
  </div>

  {{#link-to "book.create" class="btn-new"}}
    <div class="sr-only">Add New Book</div>
  {{/link-to}}
</div>

<div class="panel-content">
  <h3 class="panel-title">
    Books
  </h3>

  <ul class="collection">
    {{#each model as |book|}}
      <li>
        {{#link-to "book.detail" book.id}}
          <span class="book-title">{{book.title}}</span>
          <span class="book-isbn">{{book.ibsn}}</span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>

{{liquid-outlet class="slide-container"}}